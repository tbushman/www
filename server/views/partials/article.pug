	//- 	<h4><%= author.username %></h4>
	//- <% } %>
	p.text-muted.my-0(v-text="doc.date")
	
	h5.py-3
		small(v-text="doc.lede")
div.col-lg-6.py-4(v-if="doc.media && doc.media.length > 0")
	div.carousel-inner
		div.carousel-item(v-for="(item, j) in doc.media" :class="(sliderIndex === j ? 'active' : '')"
		:style="{opacity: (sliderIndex === j ? 1 : 0 ) }")
			img.d-block.w-100(:src="item.image+'?version='+Math.random()" :alt="'Slide '+ j")
			div.carousel-caption.d-md-block
				h5(v-text="doc.category")
				p(v-text="item.caption")

hr.py-2(style="max-width:75%;")

div#content(v-html="doc.description")

hr.py-2(style="max-width:75%;")
